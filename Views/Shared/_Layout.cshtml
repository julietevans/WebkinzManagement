<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="~/images/headerlogo.png"/>
</head>
<body class="mainbodybg">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 mainheader">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Images/WebkinzLogo.png"/></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between headertext">
                    <ul class="navbar-nav flex-grow-1 headertext">
                        <li class="nav-item">
                            <a class="nav-link headertext" asp-area="" asp-controller="About" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link headertext" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="headertext">Welcome @User.Identity.Name</a>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link headertext" asp-action="Logout" asp-controller="Account">Logout</a>
                    }
                    else
                    {
                        <a class="nav-link headertext" asp-action="Login" asp-controller="Account">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container maintext">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - WebkinzManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
